<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="test.com.selfdefineview">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_SECURE_SETTINGS" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- 用于访问网络，网络定位需要上网 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!--模糊效果的权限-->
    <uses-sdk tools:overrideLibrary="com.github.mmin18.realtimeblurview"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".MyApplication">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".lineanimator.DetailActivity"
            android:theme="@style/AppTheme.NoActionBars"/>

        <!--自定义销控图-->
        <activity android:name=".xiaokongtu.activity.XiaoKongTuActivity"/>
        <!--自定义销控图2-->
        <activity android:name=".xiaokongtu.activity.XiaoKongTu2Activity"/>
        <!--ConstraintLayout的学习-->
        <activity android:name=".constraint.ConstraintActivity"/>
        <!--CoordinatorLayout的学习使用-->
        <activity android:name=".coordinate.CoordinateActivity"/>
        <!--CoordinatorLayout的学习使用-->
        <activity android:name=".coordinate.CoordinatorActivity"
            android:theme="@style/AppThemes"/><!--覆盖app中的Theme主题-->
        <!--PaletteDetailActivity页面-->
        <activity android:name=".coordinate.PaletteDetailActivity"
            android:theme="@style/AppThemes"/><!--覆盖app中的Theme主题-->
        <!--WIFI页面-->
        <activity android:name=".wifi.WifiActivity"/>
        <!--拖动时间选择页面-->
        <activity android:name=".dragtime.DragTimeActivity"/>
        <!--CardView页面-->
        <activity android:name=".cardview.CardActivity"/>
        <!--Excel表格-->
        <activity android:name=".excel.ExcelActivity"/>
        <!--CollapseActivity页面-->
        <activity android:name=".collapse.CollapseActivity"
            android:theme="@style/AppThemes"/><!--覆盖app中的Theme主题-->
        <!--TextInputActivity页面-->
        <activity android:name=".textinputlayout.TextInputActivity"
             android:theme="@style/AppThemes"/><!--覆盖app中的Theme主题-->
        <!--底部导航栏BottomNavigationActivity-->
        <activity android:name=".bottomnavigationview.BottomNavigationActivity"/>
        <!--webview显示不同格式的文件-->
        <activity android:name=".webviewtxt.WebViewDocActivity"/>
        <activity android:name=".webviewtxt.FileDisplayActivity"/>
        <!--更新下载App-->
        <activity android:name=".updateapk.UpdateActivity"/>
        <!--.springappbarlayout页面-->
        <activity android:name=".springappbarlayout.SpringAppBarActivity"/>
        <activity android:name=".springappbarlayout.NormalAppBarLayoutActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".springappbarlayout.SpringAppBarLayoutActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".springappbarlayout.SpringAppBarLayoutWithTabActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <!--活动倒计时页面-->
        <activity android:name=".spannable.ActiveActivity"/>
    </application>

</manifest>